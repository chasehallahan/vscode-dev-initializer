{
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.autoReveal": true,
  "explorer.decorations.colors": true,
  "explorer.decorations.badges": true,
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "editor.formatOnSave": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "debug.internalConsoleOptions": "openOnSessionStart",
  "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
  "terminal.integrated.profiles.windows": {
    "Windows PowerShell": {
      "source": "PowerShell",
      "args": [
        "-NoLogo",
        "-NoExit",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        ". \"${env:LOCALAPPDATA}\\PowerShell\\Microsoft.PowerShell_profile.ps1\""
      ]
    }
  },
  "terminal.integrated.environmentChangesIndicator": "warnonly",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.showCommandGuide": true,
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.confirmOnKill": "never",
  "accessibility.signals.terminalBell": {
    "sound": "off",
    "announcement": "off"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onWindowChange",
  "files.hotExit": "onExitAndWindowClose",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.exclude": ["**/.venv/**"],
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnusedImport": "none",
    "reportUnusedVariable": "none",
    "reportUnusedFunction": "none",
    "reportUnusedClass": "none",
    "reportDuplicateImport": "none"
  },
  "black-formatter.args": ["--skip-string-normalization"],
  "black-formatter.showNotifications": "off",
  "ruff.nativeServer": "on",
  "ruff.lint.select": ["B", "C", "E", "F", "W", "I"],
  "ruff.exclude": ["**/.venv/**"],
  "ruff.lint.ignore": [
    "E203",
    "E266",
    "E501",
    "D100",
    "D101",
    "D102",
    "D103",
    "D104",
    "D105",
    "D106",
    "D107"
  ],
  "terminal.integrated.fontFamily": "DejaVu Sans Mono, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.letterSpacing": 0.2
}
